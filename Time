#include <iostream>
#include <iomanic>
using namespace std;
class Time
{
  private;
       int second;
       int hh,mm,ss;
    public;
        void getTime(void);
        void convertIntoSeconds(void);
        void dusplayTime(void);
};

void Time::getTime(void)
{
  cout<<"Enter time:"<<andl;
  cout<<"Hours?     "      cin >> hh;
  cout<<"Minites    "      cin >> mm;
  cout<<"Seconds    "      cin >> s;
  
}
void Time::convertIntoSeconds(void)
{
  second = hh*3600 + mm*60 + ss;
}
void Time::displayTime(void)
{
  cout << "The time is =" << setw(2) << setfill('0') << hh << ":"
                          << setw(2) << setfill('0') << mm << ":"
                          << setw(2) << setfill('0') << ss << endl;
}

int main()
{
  Time T;
  T.getTime();
  T.convertIntoSeconds();
  T.display();
  
  return 0;
}
